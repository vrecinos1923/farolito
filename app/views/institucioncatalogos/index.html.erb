<!-- Titlebar
================================================== -->
<div id="titlebar">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2><%= t('titulos.insticata') %></h2>
        <!-- Breadcrumbs -->
        <nav id="breadcrumbs">
          <ul>
            <li><%= inicio %></li>
            <li><%= link_to t('titulos.institucion'), institucions_path %></li>
            <li>Catálogos</li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<!-- Content
    ================================================== -->
<section class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">    
    <div class="col-lg-12">
      <table class="basic-table">
        <thead class="thead-dark">
          <tr>
            <th scope="col"><%= t('activerecord.attributes.institucioncatalogo.catalogo_id') %></th>
            <th scope="col"><%= t('activerecord.attributes.institucioncatalogo.institucion_id') %></th>
            <th scope="col"><%= t('titulos.acciones') %></th>
          </tr>
        </thead>
        <tbody>
          <% @institucioncatalogos.each do |institucioncatalogo| %>
            <tr>
              <td><%= institucioncatalogo.catalogo.valor %></td>
              <td><%= institucioncatalogo.institucion.abreviatura %></td>
              <td>
                <div class="btn-group" role="group">                 
                  <%= link_to t('botones.editar'), edit_institucion_institucioncatalogo_path(@institucion,institucioncatalogo), :class => 'button btn btn-info boton-xs' %>
                  <%= link_to t('botones.eliminar'), institucion_institucioncatalogo_path(@institucion, institucioncatalogo), method: :delete, data: { confirm: 'Seguro que desea eliminar este catálogo?' }, :class => 'button btn btn-danger boton-xs' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to t('botones.nuevo'), new_institucion_institucioncatalogo_path(@institucion), :class => 'button btn btn-primary' %>
    </div>
  </div>
</section>
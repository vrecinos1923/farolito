<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: institucioncatalogo, local: true) do |form| %>
      <% if institucioncatalogo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(institucioncatalogo.errors.count, "error") %> prohibited this institucioncatalogo from being saved:</h2>

          <ul>
          <% institucioncatalogo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-row">           
        <div class="form-group mb-2 col-md-3">            
          <%= form.label :institucion_id, :class => 'form-control-plaintext'%>                   
        </div> 
        <div class="form-group mb-2 col-md-1" style="visibility: hidden;">                       
          <%= form.text_field :institucion_id, :class => 'form-control'%>
        </div>    
        <div class="form-group mb-2 col-md-8">
          <input type="text" class="form-control" disabled="true" value='<%= @institucion.nombre %>'></input>
        </div>             
      </div>

      <div class="form-row">           
        <div class="form-group mb-2 col-md-4"> 
          <%= form.label :catalogo %>
        </div> 
        <div class="form-group mb-2 col-md-8">
          <%= form.collection_select(:catalogo_id, @valores, :id, :valor, {},{:class => "form-control chosen-select"}) %>
        </div>
      </div>

      <br>
      <div class="actions">
        <button type="submit" class="button btn btn-primary"><i class='fa fa-save'></i> Guardar</button>
      </div>
    <% end %>
  </div>
</div>
        <div class="form-group mb-2 col-md-8">
          <%= form.text_field :nombre, id: :institucion_nombre %>
        </div>
      </div>

      <div class="form-row">           
        <div class="form-group mb-2 col-md-4"> 
          <%= form.label :abreviatura %>
        </div> 
        <div class="form-group mb-2 col-md-8">
          <%= form.text_field :abreviatura, id: :institucion_abreviatura %>
        </div>
      </div>

      <div class="form-row">           
        <div class="form-group mb-2 col-md-4"> 
          <%= form.label :direccion %>
        </div> 
        <div class="form-group mb-2 col-md-8">
          <%= form.text_field :direccion, id: :institucion_direccion %>
        </div>
      </div>
      <br>
      <div class="actions">
        <button type="submit" class="button btn btn-primary"><i class='fa fa-save'></i> Guardar</button>
      </div>
    <% end %>
  </div>
</div>
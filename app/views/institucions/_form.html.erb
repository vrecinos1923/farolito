<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: institucion, local: true) do |form| %>
      <% if institucion.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(institucion.errors.count, "error") %> prohibited this institucion from being saved:</h2>

          <ul>
          <% institucion.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-row">           
        <div class="form-group mb-2 col-md-4"> 
          <%= form.label :nombre %>
